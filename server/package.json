{
  "name": "cupcake-bknd",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node --env-file .env dist/server.js ",
    "dev": "tsx watch --env-file .env src/server.ts",
    "test": "vitest run",
    "test:coverage": "vitest --coverage run",
    "build": "pnpm test && NODE_OPTIONS='--max-old-space-size=4096' tsup --config tsup.config.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx src/db/seed.ts",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:down-brute": "docker compose down -v",
    "docker:create": "docker build --target production -t eobryandev/cupcake-bknd:0.0.1 .",
    "docker:push": "docker push eobryandev/cupcake-bknd:0.0.1",
    "lint": "eslint \"./src/**/*.{js,ts}\"",
    "lint:fix": "eslint \"./src/**/*.{js,ts}\" --fix",
    "format": "prettier --write \"**/*.{js,ts,json,css,html,md}\""
  },
  "keywords": [],
  "author": "bryan",
  "license": "ISC",
  "packageManager": "pnpm@10.14.0",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "drizzle-orm": "^0.44.5",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "postgres": "^3.4.7",
    "vitest": "^3.2.4",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "@vitest/coverage-v8": "^3.2.4",
    "drizzle-kit": "^0.31.5",
    "drizzle-seed": "^0.3.1",
    "eslint": "^9.36.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.4.0",
    "prettier": "^3.6.2",
    "tsup": "^8.5.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2"
  }
}